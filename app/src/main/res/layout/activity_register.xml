<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/signupbg2"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="6">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_20"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="@dimen/space_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:fontFamily="@font/poppins_bold"
                android:text="Create Account"
                android:textColor="@color/black"
                android:textSize="30dp" />
            <LinearLayout
                android:id="@+id/usernamelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_56"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/size_52"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_8"
                android:background="@drawable/bg_rect_signin"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:alpha="0.4"
                    android:clickable="true"
                    app:srcCompat="@drawable/user"
                    app:tint="@color/icon_dark" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginEnd="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="#00EC0101"
                    android:fontFamily="@font/poppins_bold"
                    android:hint="Username"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textColorHint="#686262"
                    android:textSize="@dimen/text_16" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/namelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_56"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_8"
                android:background="@drawable/bg_rect_signin"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/person1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:alpha="0.4"
                    android:clickable="true"
                    app:srcCompat="@drawable/user"
                    app:tint="@color/icon_dark" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginEnd="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:fontFamily="@font/poppins_bold"
                    android:hint="Name"
                    android:includeFontPadding="false"

                    android:textColor="@color/black"
                    android:textColorHint="#686262"
                    android:textSize="@dimen/text_16"  />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/cntr_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_56"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_8"
                android:background="@drawable/bg_rect_signin"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:alpha="0.4"
                    android:clickable="true"
                    android:src="@drawable/bg_ic_mail"
                    app:tint="@color/black" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginEnd="@dimen/space_16"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:fontFamily="@font/poppins_bold"
                    android:hint="Email"
                    android:includeFontPadding="false"
                    android:inputType="textWebEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#686262"
                    android:textSize="@dimen/text_16"  />
            </LinearLayout>
            <LinearLayout
            android:id="@+id/cntr_pass"
            android:layout_width="match_parent"
                android:layout_height="@dimen/size_56"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_16"

                android:layout_marginBottom="@dimen/space_8"
            android:background="@drawable/bg_rect_signin"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_12"
                android:alpha="0.4"
                android:clickable="true"
                app:srcCompat="@drawable/bg_ic_pass"
                app:tint="@color/icon_dark" />

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:fontFamily="@font/poppins_bold"
                android:hint="Password"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#686262"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/btn_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_8"
                android:alpha="0.4"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/space_8"
                app:srcCompat="@drawable/ic_unhide"
                app:tint="@color/icon_dark" />
        </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginEnd="@dimen/space_16"
                android:backgroundTint="#D51F65DF"
                android:elevation="10dp"
                android:focusable="true"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Sign Up "
                android:textSize="@dimen/size_20"
                app:cornerRadius="40dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Already a User ?"
                    android:textSize="@dimen/size_18" />

                <TextView
                    android:id="@+id/alreadyuser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text=" Login "
                    android:textColor="@color/bluePrimary"
                    android:textSize="@dimen/size_18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/white_curve_medium"
                    android:elevation="2dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/google_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Google"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>